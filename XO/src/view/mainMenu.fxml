<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="600.0" minWidth="400.0" xmlns="http://javafx.com/javafx/8.0.121"
      fx:controller="view.MainMenuController">
   <children>
      <AnchorPane VBox.vgrow="ALWAYS">
         <children>
            <Button fx:id="startBtn" mnemonicParsing="false" onAction="#onStartBtnClicked" text="Start Game"
                    textOverrun="CLIP" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="300.0"
                    AnchorPane.rightAnchor="300.0" AnchorPane.topAnchor="10.0">
               <padding>
                  <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
               </padding>
               <font>
                  <Font size="37.0"/>
               </font>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
         </VBox.margin>
      </AnchorPane>
      <AnchorPane VBox.vgrow="ALWAYS">
         <children>
            <Button fx:id="settingBtn" mnemonicParsing="false" onAction="#onSettingsBtnClicked" text="Settings"
                    AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="300.0" AnchorPane.rightAnchor="300.0"
                    AnchorPane.topAnchor="10.0">
               <padding>
                  <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
               </padding>
               <font>
                  <Font size="41.0"/>
               </font>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
         </VBox.margin>
      </AnchorPane>
      <AnchorPane VBox.vgrow="ALWAYS">
         <children>
            <Button fx:id="exitBtn" mnemonicParsing="false" text="Exit" AnchorPane.bottomAnchor="10.0"
                    AnchorPane.leftAnchor="300.0" AnchorPane.rightAnchor="300.0" AnchorPane.topAnchor="10.0">
               <padding>
                  <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
               </padding>
               <font>
                  <Font size="41.0"/>
               </font>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
         </VBox.margin>
      </AnchorPane>
   </children>
</VBox>
